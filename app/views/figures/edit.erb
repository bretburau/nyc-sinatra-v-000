
<h2>Edit: <%=@figure.name%></h2>
<form method='post' action='/figures/<%=@figure.id%>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type='text' value='Figure Name' id='figure_name' name='figure[name]'>
  <%# <input type='text' name='figure[title_ids]'> %>
  <h3>Available Titles</h3>
    <%Title.all.each do |title|%>
      <label for='title_<%=title.id%>'><%=title.name.capitalize%></title>
      <input <%='checked' if @figure.titles.include?(title)%>type='checkbox' id='title_<%=title.id%>' value='<%=title.id%>' name='figure[title_ids][]'>
    <%end%>
    <br>
  <input type='text' value='Enter a new landmark' name='new_landmark' id='new_landmark'>
  <input type='submit' value='Edit Figure'>
</form>